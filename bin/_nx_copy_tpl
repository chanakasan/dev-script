#!/usr/bin/env bash

main() {
  local tpl_name="$1"
  local path1=$HOME/tpl/$tpl_name
  local dest="$2"
  if [ -z $dest ]; then
    dest=`haiku`
  else
    dest=$dest/`haiku`
  fi
  if [ -d "$path1" ]; then
    echo " copying $tpl_name => $dest"
    rsync -a --exclude .git $path1/ $dest
  else
    echo " template not found: $path1"
  fi
}

main "$@"
